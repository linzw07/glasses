/**
 * Category left navigation
 *
 * @see Mage_Catalog_Block_Navigation
 */
?>
<?php if (!Mage::registry('current_category')) return ?>
<?php $_categories = $this->getCurrentChildCategories() ?>
<?php $_count = is_array($_categories)?count($_categories):$_categories->count(); ?>
<?php if($_count): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?php echo $this->__('Browse By') ?></span></strong>
    </div>
    <div class="block-content box">
        <dl id="narrow-by-list2">
            <dt id="navigation_left"><?php echo $this->__('Category') ?></dt>
            <dd id="list_navigation">
                <ol>
                <?php foreach ($_categories as $_category): ?>
                    <?php if($_category->getIsActive()): ?>
                    <li>
                        <a href="<?php echo $this->getCategoryUrl($_category) ?>"<?php if ($this->isCategoryActive($_category)): ?> class="current"<?php endif; ?>><?php echo $this->escapeHtml($_category->getName()) ?></a> (<?php echo $_category->getProductCount() ?>)
                    </li>
                    <?php endif; ?>
                <?php endforeach ?>
                </ol>
            </dd>
            <script type="text/javascript">
                function toogleShopby_<?php echo $name ?>(){
                    jQuery('#narrow-by-list2 #list_navigation').css('display','none');
					jQuery('#narrow-by-list2 #navigation_left').addClass('toogle-icon');
                	jQuery('#narrow-by-list2 #navigation_left').on('click', function(){
                		jQuery(this).toggleClass("active").parent().find("#list_navigation").slideToggle();
                	});
                };
            	
            	jQuery(document).ready(function(){
            		toogleShopby_<?php echo $name ?>();
            	});
            </script>
        </dl>
        <script type="text/javascript">decorateDataList('narrow-by-list2')</script>
    </div>
</div>
<?php endif; ?>
