<?php
    $setting = Mage::helper('bigshopsettings');    
    $width  =   $setting->getUpsell_Width(280);
    $height =   $setting->getUpsell_Height(280);
?>
<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell slider">
    <h2><span><?php echo $this->__('You may also be interested in the following product(s)') ?></span></h2>
    <div id="upsell-product-table">
        <ul class="products-grid">
            <?php foreach ($this->getItemCollection()->getItems() as $item): ?>
            <li class="item" style="margin-right: <?php echo $setting->getUpsell_Gutter(20) ?>px;width: <?php echo $width; ?>px">
                
                <a href="<?php echo $item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($item->getName()) ?>" class="product-image">
                    <img src="<?php echo $this->helper('catalog/image')->init($item, 'small_image')->resize($width, $height) ?>" width="<?php echo $width ?>" height="<?php echo $height;?>" alt="<?php echo $this->htmlEscape($item->getName()) ?>" />
                </a>
                <div class="product-details">
					<h3 class="product-name"><a href="<?php echo $item->getProductUrl() ?>" title="<?php echo $this->htmlEscape($item->getName()) ?>"><?php echo $this->htmlEscape($item->getName()) ?><?php Mage::helper('productlabels')->display($item);?></a></h3>
					<?php echo $this->getPriceHtml($item, true, '-upsell') ?>
					<?php echo $this->getReviewsSummaryHtml($item) ?>
                </div>
            </li>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif ?>
